---
import { Sun, Moon, Menu, Home, User, FileText, MessageSquare, BookOpen, Mail } from '@lucide/astro';

const currentPath = Astro.url.pathname;
---

<header class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50">
    <nav id="navigation" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
                <a href="/" class="text-xl font-bold text-gray-900 dark:text-gray-100">
                    Austin Cole
                </a>
            </div>
            
            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center space-x-4" role="navigation" aria-label="Main navigation">
                <a href="/" class={`nav-link-base ${currentPath === '/' ? 'active' : ''}`}>
                    <Home size={16} />
                    Home
                </a>
                <a href="/about/" class={`nav-link-base ${currentPath.includes('/about/') ? 'active' : ''}`}>
                    <User size={16} />
                    About
                </a>
                <a href="/cv/" class={`nav-link-base ${currentPath.includes('/cv/') ? 'active' : ''}`}>
                    <FileText size={16} />
                    CV
                </a>
                <a href="/testimonials/" class={`nav-link-base ${currentPath.includes('/testimonials/') ? 'active' : ''}`}>
                    <MessageSquare size={16} />
                    Testimonials
                </a>
                <a href="/blog/" class={`nav-link-base ${currentPath.includes('/blog/') ? 'active' : ''}`}>
                    <BookOpen size={16} />
                    Blog
                </a>
                <a href="/contact/" class={`nav-link-base ${currentPath.includes('/contact/') ? 'active' : ''}`}>
                    <Mail size={16} />
                    Contact
                </a>
                
                <button id="theme-toggle" 
                        class="p-2 rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
                        aria-label="Toggle dark mode"
                        title="Toggle between light and dark theme">
                    <Sun size={20} class="dark:hidden" />
                    <Moon size={20} class="hidden dark:inline" />
                </button>
            </div>

            <!-- Mobile Navigation -->
            <div class="md:hidden flex items-center space-x-2">
                <button id="theme-toggle-mobile" 
                        class="p-2 rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
                        aria-label="Toggle dark mode"
                        title="Toggle between light and dark theme">
                    <Sun size={20} class="dark:hidden" />
                    <Moon size={20} class="hidden dark:inline" />
                </button>
                <button id="mobile-menu-button" 
                        class="p-2 rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
                        aria-label="Toggle mobile menu"
                        aria-expanded="false"
                        aria-controls="mobile-menu"
                        title="Open navigation menu">
                    <Menu size={24} />
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4" role="navigation" aria-label="Mobile navigation menu">
            <div class="flex flex-col space-y-2">
                <a href="/" class={`nav-link-base ${currentPath === '/' ? 'active' : ''}`}>
                    <Home size={16} />
                    Home
                </a>
                <a href="/about/" class={`nav-link-base ${currentPath.includes('/about/') ? 'active' : ''}`}>
                    <User size={16} />
                    About
                </a>
                <a href="/cv/" class={`nav-link-base ${currentPath.includes('/cv/') ? 'active' : ''}`}>
                    <FileText size={16} />
                    CV
                </a>
                <a href="/testimonials/" class={`nav-link-base ${currentPath.includes('/testimonials/') ? 'active' : ''}`}>
                    <MessageSquare size={16} />
                    Testimonials
                </a>
                <a href="/blog/" class={`nav-link-base ${currentPath.includes('/blog/') ? 'active' : ''}`}>
                    <BookOpen size={16} />
                    Blog
                </a>
                <a href="/contact/" class={`nav-link-base ${currentPath.includes('/contact/') ? 'active' : ''}`}>
                    <Mail size={16} />
                    Contact
                </a>
            </div>
        </div>
    </nav>
</header>
