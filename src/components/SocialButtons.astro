---
import { Linkedin, Github } from '@lucide/astro';

export interface Props {
  linkedinUrl: string;
  githubUrl: string;
  variant?: 'default' | 'compact' | 'text';
  size?: 'sm' | 'md' | 'lg';
}

const { linkedinUrl, githubUrl, variant = 'default', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-6 py-3 text-lg'
};

const iconSizes = {
  sm: 14,
  md: 16,
  lg: 20
};
---

<div class={`social-buttons ${variant}`}>
  {variant === 'text' ? (
    <div class="flex items-center gap-4 text-sm">
      <a href={linkedinUrl} target="_blank" class="flex items-center gap-2 text-[#0077b5] hover:text-[#005885] transition-colors">
        <Linkedin size={iconSizes[size]} />
        LinkedIn
      </a>
      <a href={githubUrl} target="_blank" class="flex items-center gap-2 text-gray-700 hover:text-gray-900 transition-colors">
        <Github size={iconSizes[size]} />
        GitHub
      </a>
    </div>
  ) : (
    <div class={variant === 'compact' ? 'social-buttons-compact' : 'social-buttons-default'}>
      <a 
        href={linkedinUrl} 
        target="_blank" 
        class={`social-btn-linkedin ${sizeClasses[size]}`}
      >
        <Linkedin size={iconSizes[size]} />
        LinkedIn
      </a>
      <a 
        href={githubUrl} 
        target="_blank" 
        class={`social-btn-github ${sizeClasses[size]}`}
      >
        <Github size={iconSizes[size]} />
        GitHub
      </a>
    </div>
  )}
</div>

<style>
  @media print {
    .social-buttons a {
      background: none !important;
      color: #333 !important;
      padding: 0 !important;
      border-radius: 0 !important;
      font-weight: normal !important;
    }
  }
</style>
